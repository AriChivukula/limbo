{
  "name": "limbo",
  "version": "TRAVIS_BUILD_NUMBER",
  "description": "Limbo Isn't Meant to be Bar Ordained",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "limbo",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "permissions": [
    "tabs",
    "https://*.westlaw.com/*"
  ],
  "web_accessible_resources": ["*"],
  "content_scripts": [
    {
      "matches": ["https://*.westlaw.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
